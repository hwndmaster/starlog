{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (console)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "Starlog.exe",
      "args": [
        /* Scenario 1: Providing all parameters
        "loadpath",
        "--path",
        "c:\\Dev\\Lab\\Starlog\\_\\Set 1",
        "--settings",
        "LEVEL DATETIME [Thread] Logger - Message",
        "--artifacts",
        "3"*/

        /* Scenario 2: Providing a template name
        "loadpath",
        "--path",
        "c:\\Dev\\Lab\\Starlog\\_\\Set 1",
        "--template",
        "Starfix"*/

        /* Scenario 3: Providing a template id
        "loadpath",
        "--path",
        "c:\\Dev\\Lab\\Starlog\\_\\Set 1",
        "--template",
        "00000000-0000-0000-0000-000000000010"*/
      ],
      "cwd": "${workspaceFolder}/build/net8.0-windows10.0.19041.0",
      "console": "internalConsole",
      "stopAtEntry": false,
      "requireExactSource": false
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    }
  ]
}
