{
  "files.exclude": {
      "**/bin/": true,
      "**/obj/": true,
      "build/": true
  },
  "dotnet-test-explorer.testArguments": "/p:CollectCoverage=true /p:CoverletOutputFormat=lcov /p:CoverletOutput=../lcov /p:Exclude=\"[Genius.Atom.*]*\"",
  "coverage-gutters.coverageFileNames": [
      "lcov.info"
  ],
  "dotnet-test-explorer.autoWatch": false, // temporarily disabled due to perf issues
  "editor.tabSize": 4,
  "cSpell.words": [
    "Regexes",
    "Starlog"
  ],
  "dotnet.defaultSolution": "Starlog.sln"
}