            <BitmapImage x:Key="RegexBw32" UriSource="pack://application:,,,/Assets/RegexBw32.png" />
            <BitmapImage x:Key="Share32" UriSource="pack://application:,,,/Assets/Share32.png" />
            <BitmapImage x:Key="Thread32" UriSource="pack://application:,,,/Assets/Thread32.png" />
            <BitmapImage x:Key="TimeRange32" UriSource="pack://application:,,,/Assets/TimeRange32.png" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
