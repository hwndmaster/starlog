<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:core="clr-namespace:System;assembly=mscorlib">

    <Thickness x:Key="TabRootContentMargin" Left="10" Right="10" Top="10" Bottom="10" />

    <Style x:Key="Starlog.TabRootContent.Grid" TargetType="Grid">
        <Setter Property="Margin" Value="{StaticResource TabRootContentMargin}" />
    </Style>
    <Style x:Key="Starlog.TabRootContent.DockPanel" TargetType="DockPanel">
        <Setter Property="Margin" Value="{StaticResource TabRootContentMargin}" />
    </Style>
    <Style x:Key="Starlog.TabRootContent.DataGrid" TargetType="DataGrid" BasedOn="{StaticResource MahApps.Styles.DataGrid}">
        <Setter Property="Margin" Value="{StaticResource TabRootContentMargin}" />
    </Style>

    <Style x:Key="Starlog.ButtonBar.Button" TargetType="Button" BasedOn="{StaticResource MahApps.Styles.Button}">
        <Setter Property="Margin" Value="5,2" />
    </Style>

</ResourceDictionary>
