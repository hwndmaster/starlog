<UserControl x:Class="Genius.Starlog.UI.Views.DropOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Panel.ZIndex="1000">
    <Border Background="#80404040" IsHitTestVisible="False">
        <Viewbox>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                        Orientation="Horizontal" Margin="100" IsHitTestVisible="False">
                <TextBlock Foreground="White" FontSize="20" Margin="15,0,0,0" Name="MyTextBlock">Drop Here...</TextBlock>
            </StackPanel>
        </Viewbox>
    </Border>
</UserControl>
