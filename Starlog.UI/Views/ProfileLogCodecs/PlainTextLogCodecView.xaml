<UserControl x:Class="Genius.Starlog.UI.Views.ProfileLogCodecs.PlainTextLogCodecView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Validation.ErrorTemplate="{x:Null}">
    <Grid>
        <StackPanel Orientation="Vertical" Style="{StaticResource FormPanel}">
            <DockPanel>
                <Label>Line pattern:</Label>
                <ComboBox
                    ItemsSource="{Binding LinePatterns}"
                    SelectedItem="{Binding LinePattern}"
                    DisplayMemberPath="Name">
                </ComboBox>
            </DockPanel>
        </StackPanel>
    </Grid>
</UserControl>
